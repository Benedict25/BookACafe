<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/cartFnbPic"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/fnb_logo"/>

        <TextView
            android:id="@+id/cartFnbName"
            android:paddingStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cartFnbPic"
            android:text="@string/name_placeholder"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cartFnbPrice"
            android:paddingStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cartFnbPic"
            android:layout_toEndOf="@+id/cartFnbPic"
            android:text="@string/price_placeholder" />

        <ImageView
            android:id="@+id/cartAddButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/add_logo"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/cartFnbQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantity_placeholder"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_toStartOf="@+id/cartAddButton"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/cartSubtractButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/cartFnbQuantity"
            android:src="@drawable/subtract_logo"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</LinearLayout>