<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CashierHomeFragment"
    android:id="@+id/fragment_container"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/SplashScreenImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/logo2"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/SplashScreenImage"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/imageProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/icon_profile" />
        <TextView
            android:id="@+id/cashier_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, \nNicholas Russel Permana"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/buttonTablesA1"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:text="A1"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.227"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.356" />

            <Button
                android:layout_marginLeft="160dp"
                android:id="@+id/buttonTablesA2"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:text="A2"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">
            <Button
                android:id="@+id/buttonTablesA3"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:text="A3"
                android:textColor="@color/black" />

            <Button
                android:layout_marginLeft="160dp"
                android:id="@+id/buttonTablesA4"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:text="A4"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">
            <Button
                android:id="@+id/buttonTablesB1"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="B1"
                android:textColor="@color/black"/>
            <Button
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/buttonTablesB2"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="B2"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/buttonTablesB3"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="B3"
                android:textColor="@color/black"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/buttonLogOut"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_logout"
            android:text="LOG OUT"
            android:textColor="@color/white"/>
    </LinearLayout>




</LinearLayout>

